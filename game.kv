
<MainMenu>:
    FloatLayout:  # Use FloatLayout as the root widget
        Image:
            source: 'resourse/planets_bg.jpg'  # Replace with your image file path
            allow_stretch: True  # Allow the image to stretch to fill the screen
            keep_ratio: False 

    BoxLayout: #for right and side padding
        orientation: 'horizontal'
        
        Label:
            text:" "
            size_hint:.2,1

        BoxLayout: #for adding buttons
            orientation:'horizontal'
            size_hint:.6,1


            Button:
                # text: 'Normal Mode'
                on_release: root.manager.current = 'avatar_selection'
                # size_hint:.4,.2
                text:"Normal mode"
                font_size: 38
                size_hint:.3,.2
                pos_hint:{"center_x":.5,"center_y":.5}
                #on_press:root.button_click()
                #background_normal: ""
                background_color: 1, 1, 1, 0
                canvas.before:
                    Color:
                        rgba: .6, .8, 1, 0.9
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [20]
            Label:
                text:" " 
                size_hint:.1,.1 

            Button:
            #     text: 'VR Mode'  # Implement VR mode if needed
            #     size_hint:.4,.4
